<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.ShipOrderItem" table="ship_order_item" schema="mydb">
        <composite-id mapped="true" class="entity.ShipOrderItemPK">
            <key-property name="shipOrdersId" column="ship_orders_id"/>
            <key-property name="itemsId" column="items_id"/>
        </composite-id>
    </class>
</hibernate-mapping>