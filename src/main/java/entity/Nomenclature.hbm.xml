<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Nomenclature" table="nomenclature" schema="mydb">
        <id name="id" column="id"/>
        <property name="name" column="name"/>
        <property name="article" column="article"/>
        <property name="descritrion" column="descritrion"/>
        <property name="picture" column="picture"/>
        <property name="basePrice" column="base_price"/>
        <property name="wholesalePrice" column="wholesale_price"/>
        <property name="retailPrice" column="retail_price"/>
    </class>
</hibernate-mapping>